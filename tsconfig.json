{
  "compilerOptions": {
    // Enable latest features
    "module": "ESNext",
    "moduleDetection": "force",
    "target": "ESNext",

    // Bundler mode
    "moduleResolution": "Bundler",
    "verbatimModuleSyntax": false,

    // Best practices
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "strict": true,

    // Import aliases
    "paths": {
      "src/*": ["./src/*"],
      "lib/*": ["./src/lib/*"],
      "tools/*": ["./tools/*"]
    }
  },
  "exclude": [
    "node_modules", //
    "**/node_modules/*",
    "build/",
    "src-stripped/"
  ]
}

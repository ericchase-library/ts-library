{
  "compilerOptions": {
    // Enable latest features
    "module": "ESNext",
    "moduleDetection": "force",
    "target": "ESNext",

    // Bundler mode
    "moduleResolution": "Bundler",
    "noEmit": true,
    "verbatimModuleSyntax": false,

    // Best practices
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "strict": true,

    // Other options
    "resolveJsonModule": true,
    "jsx": "react-jsx",

    // NOTE: For testing path aliases with bundler processor
    "paths": {
      "src/*": ["./src/*"]
    }

    // NOTE: For library debug purposes
    // "checkJs": true
  },

  // Include files for typescript/intellisense
  "include": ["./*.ts", "./out/**/*.js", "./src/**/*.ts", "./tools/**/*.ts"]
}

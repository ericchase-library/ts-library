{
  "compilerOptions": {
    "module": "ESNext",
    "moduleDetection": "force",
    "target": "ESNext",
    "moduleResolution": "Bundler",
    "noEmit": true,
    "verbatimModuleSyntax": false,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
    "jsx": "react",
    "paths": {
      "src/*": ["./src/*"]
    }
  },
  "include": ["*", "src/**/*", "tools/**/*", "out/**/*"]
}
